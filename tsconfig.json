{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@llm-providers/*": ["packages/llm-providers/src/*"],
      "@tools/*": ["packages/tools/src/*"],
      "@utils/*": ["packages/utils/src/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
