{
  "name": "agent-forge",
  "description": "Agent Forge - Enterprise Orchestration System",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rimraf node_modules",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@swc/core": "1.9.3",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "turbo": "^1.12.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md,json}": "prettier --write"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
