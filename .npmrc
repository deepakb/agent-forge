# Enable workspaces for the monorepo
workspaces=true

# Save exact versions of dependencies
save-exact=true

# Cache directory for faster installations
cache=./.npm-cache

# Prevent accidental publication of private packages
private=true

# Registry for npm dependencies (default or custom)
registry=https://registry.npmjs.org/

# Always require authentication for publishing
always-auth=true

# Timeout for HTTP requests (useful for slow networks)
fetch-timeout=300000

# Set log level (info, warn, error, silent)
loglevel=info
