{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": ".",
      "composite": true,
      "tsBuildInfoFile": "./dist/.tsbuildinfo",
      "paths": {
        "@utils/*": ["./src/*"]
      },
      "moduleResolution": "bundler",
      "module": "ESNext",
      "target": "ES2020"
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "references": []
}