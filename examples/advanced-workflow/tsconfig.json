{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "paths": {
      "@core/*": ["../../packages/core/src/*"],
      "@llm-providers/*": ["../../packages/llm-providers/src/*"],
      "@tools/*": ["../../packages/tools/src/*"],
      "@utils/*": ["../../packages/utils/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/llm-providers" },
    { "path": "../../packages/tools" },
    { "path": "../../packages/utils" }
  ]
} 